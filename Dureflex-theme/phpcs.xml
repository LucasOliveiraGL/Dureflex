<?xml version="1.0"?>
<ruleset name="Dureflex Theme">
    <description>Padrões de codificação para o tema Dureflex</description>
    
    <!-- Incluir padrões WordPress -->
    <rule ref="WordPress"/>
    
    <!-- Excluir algumas regras muito restritivas -->
    <rule ref="WordPress.Files.FileName.NotHyphenatedLowercase">
        <exclude-pattern>*/index.php</exclude-pattern>
    </rule>
    
    <!-- Arquivos a serem verificados -->
    <file>*.php</file>
    <file>template-parts/*.php</file>
    
    <!-- Arquivos a serem ignorados -->
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*.min.js</exclude-pattern>
    <exclude-pattern>*.min.css</exclude-pattern>
    
    <!-- Configurações -->
    <arg name="colors"/>
    <arg name="parallel" value="75"/>
    <arg name="extensions" value="php"/>
    <arg value="n"/>
</ruleset>
